  <section>
    <div class="container">
    <form class="form-horizontal">
      <fieldset>
        <div id="legend">
          <legend class="">Register</legend>
        </div>

        <div class="control-group">
          <!-- Username -->
          <label class="control-label"  for="username">Username</label>
          <div class="controls">
           {{input type="text" class="input-xlarge" value=user.name}}
            <p class="help-block">Username can contain any letters or numbers, without spaces</p>
          </div>
        </div>

            <div class="control-group">
          <!-- Username -->
          <label class="control-label"  for="username">LastName</label>
          <div class="controls">
           {{input type="text" class="input-xlarge" value=user.lastName}}
            <p class="help-block">LastName can contain any letters or numbers, without spaces</p>
          </div>
        </div>

        <div class="control-group">
          <!-- E-mail -->
          <label class="control-label" for="email">E-mail</label>
          <div class="controls">
             {{input type="text" class="input-xlarge" class="input-xlarge" value=user.email}}
            <p class="help-block">Please provide your E-mail</p>
          </div>
        </div>

        <div class="control-group">
          <!-- Password-->
          <label class="control-label" for="password">Password</label>
          <div class="controls">
            {{input type="password"  class="input-xlarge" value=user.password}}
            <p class="help-block">Password should be at least 4 characters</p>
          </div>
        </div>

        <div class="control-group">
          <!-- Button -->
          <div class="controls">
              <button class="btn btn-lg btn-primary btn-block" type="submit" {{action "register" user }}>Register</button>
          </div>
        </div>
      </fieldset>
    </form>
</div>
  </section>
{{outlet}}
